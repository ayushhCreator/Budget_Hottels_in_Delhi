
@using Budget_hotels_In_Delhi.Models
@model tbl_TourPackage
@{
    ViewBag.Title = "TourPackageDetails";
}



<!--==============================
    Breadcumb
============================== -->

<div class="breadcumb-wrapper " data-bg-src="/Content/assets/AYUSIMG/4.PNG">
    <div class="container mt-5">
        <div class="breadcumb-content">
            <h4 class="breadcumb-title">Tour PAcakge Details</h4>
            <ul class="breadcumb-menu">
                <li><a href="/">Home</a></li>
                <li>Tour Package Details</li>
            </ul>
        </div>
    </div>
</div>





<!--==============================
TOur Pacakges Details
==============================-->



<section id="gallery" class="space-top">


    @foreach (var item in ViewBag.PackageMasterDetails)
    {
        <div class="container">
            <div class="col">
                <div class="sidebar">
                    <div class="widget style2">
                        <div class="widget-content">
                            <h2 class="text-white text-center">  @item.TourHeading</h2>
                        </div>

                    </div>
                </div>

            </div>

            <div class="row">

                <div class="col-xxl-8 col-lg-7">
                    @Html.Raw(@item.TourImages)


                    <div class="room-details">
                        <div class="room-details_price">
                            <span class="room-details_subtitle">@item.TourDuration</span>
                            <div class="service-star">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                            </div>
                        </div>
                        <h2 class="room-details_title">Overview </h2>

                        @Html.Raw(@item.TourOverview)

                    </div>


                    <div class="room-details">
                        <h3 class="h3 page-title">Trip Highlights</h3>

                        <div class="about-wrapper">
                            @Html.Raw(item.TourHighlights)



                        </div>

                    </div>
                </div>

                <div class="col-xxl-4 col-lg-5">
                    <div class="sidebar">
                        <div class="widget style2">
                            <div class="widget-content">
                                <h3 class="widget-title text-center">Tour Enquiry</h3>
                            </div>
                            <form action="#" method="POST" class="contact-form style5 ajax-contact">
                                <div class="row">
                                    <div class="form-group col-12">
                                        <i class="fal fa-user"></i>
                                        <input type="text" class="form-control" name="name" id="name"
                                               placeholder="Your Full Name">
                                    </div>
                                    <div class="form-group col-12">
                                        <i class="fal fa-envelope"></i>
                                        <input type="email" class="form-control" name="email" id="email"
                                               placeholder="Your email">
                                    </div>
                                    <div class="form-group col-12">
                                        <i class="fa-regular fa-phone"></i>
                                        <input type="tel" class="form-control" name="number" id="number"
                                               placeholder="Phone Number">
                                    </div>

                                    <div class="form-group col-12">

                                        <input id="Text1" disabled="disabled" type="text" value="" placeholder="Tour Package Name" />
                                    </div>

                                    <div class="form-group col-12">
                                        <i class="fa-thin fa-pencil"></i>
                                        <textarea name="message" id="message" cols="30" rows="3" class="form-control"
                                                  placeholder="write Message"></textarea>

                                    </div>
                                    <div class="form-btn col-12 text-center">
                                        <button class="as-btn shadow-none">Book Now</button>
                                    </div>
                                </div>
                                <p class="form-messages mb-0 mt-3"></p>
                            </form>
                        </div>
                    </div>
                    <div class="sidebar">
                        <div>
                            <div class="title-area mb-25">
                                <h3 class="sec-title">Itinerary Details</h3>
                            </div>
                            <div class="accordion-area accordion" id="faqAccordion">
                                <div class="accordion-card">
                                    <div class="accordion-header" id="collapse-item-1">
                                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-1" aria-expanded="true" aria-controls="collapse-1">
                                            Day 01
                                        </button>
                                    </div>
                                    <div id="collapse-1" class="accordion-collapse collapse show" aria-labelledby="collapse-item-1" data-bs-parent="#faqAccordion" style="">
                                        <div class="accordion-body">
                                            @Html.Raw(item.TourItinerary1)
                                        </div>
                                    </div>
                                </div>

                                <div class="accordion-card">
                                    <div class="accordion-header" id="collapse-item-2">
                                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-2" aria-expanded="false" aria-controls="collapse-2">
                                            Day 02
                                        </button>
                                    </div>
                                    <div id="collapse-2" class="accordion-collapse collapse" aria-labelledby="collapse-item-2" data-bs-parent="#faqAccordion" style="">
                                        <div class="accordion-body">
                                            @Html.Raw(item.TourItinerary2)

                                        </div>
                                    </div>
                                </div>


                                <div class="accordion-card ">
                                    <div class="accordion-header" id="collapse-item-3">
                                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-3" aria-expanded="false" aria-controls="collapse-3">
                                            Day 03
                                        </button>
                                    </div>
                                    <div id="collapse-3" class="accordion-collapse collapse " aria-labelledby="collapse-item-3" data-bs-parent="#faqAccordion">
                                        <div class="accordion-body">
                                            @Html.Raw(item.TourItinerary3)

                                        </div>
                                    </div>
                                </div>


                                <div class="accordion-card">
                                    <div class="accordion-header" id="collapse-item-4">
                                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-4" aria-expanded="false" aria-controls="collapse-4">
                                            Day 04
                                        </button>
                                    </div>
                                    <div id="collapse-4" class="accordion-collapse collapse " aria-labelledby="collapse-item-4" data-bs-parent="#faqAccordion">
                                        <div class="accordion-body">
                                            @Html.Raw(item.TourItinerary4)

                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>

                </div>
            </div>




        </div>

    }
</section>








