@using Budget_hotels_In_Delhi.Models
@model tbl_WebContactUs

@{
    ViewBag.Title = "Contact";
}


<!--==============================
    Breadcumb
============================== -->
<div class="breadcumb-wrapper " data-bg-src="/Content/assets/AYUSIMG/4.PNG">

    <div class="container mt-5">

        <div class="breadcumb-content">
            <h3 class="breadcumb-title">Contact Us</h3>
            <ul class="breadcumb-menu">
                <li><a href="index.html">Home</a></li>
                <li>Contact Us</li>
            </ul>
        </div>
    </div>
</div>


<!--==============================
Contact Area
==============================-->


<div class="space-top">
    <div class="container">
        <div class="contact-info-wrap mb-60">
            <span class="contact-title">Contact Info<span class="shape"></span></span>
            <div class="row">

                <div class="col-lg-4">
                    <div class="contact-info">
                        <div class="contact-info_icon style2">
                            <i class="fat fa-phone"></i>
                        </div>
                        <div class="media-body">
                            <h4 class="contact-info_title">Contact Number :</h4>
                            <span class="contact-info_text">
                                <a href="tel:+91 1234567890">+91 1234567890</a>
                                <a href="tel:+91 1234567890">+91 1234567890</a>

                            </span>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="contact-info">
                        <div class="contact-info_icon">
                            <i class="fat fa-location-dot"></i>
                        </div>
                        <div class="media-body">
                            <h4 class="contact-info_title">Our Office Address</h4>
                            <span class="contact-info_text">New Delhi,Delhi </span>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="contact-info">
                        <div class="contact-info_icon style3">
                            <i class="fa-solid fa-envelope"></i>
                        </div>
                        <div class="media-body">
                            <h4 class="contact-info_title">Our Mail Address</h4>
                            <span class="contact-info_text">
                                <a href="budgethotelsindelhi@gmail.com">budgethotelsindelhi@gmail.com</a>
                                <a href="budgethotelsindelhi@gmail.com">budgethotelsindelhi@gmail.com</a>

                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="container space-top">
    <div class="row">
        <div class="col-lg-12">
            @*<form action="#" method="POST" class="contact-form style3 ajax-contact">*@
                @using (Ajax.BeginForm("AddContact", "ContactUs", FormMethod.Post, new AjaxOptions
                {
                    InsertionMode = InsertionMode.Replace,
                    OnSuccess = "fn_success(data)",
                    OnFailure = "fn_failure"
                }, new {@class= "contact-form style3 ajax-contact" }))
                {


                    <h2 class="form-title">Get In touch</h2>



                    <div class="row">
                        <div class="form-group col-md-6">
                            <i class="fal fa-user"></i>
                            @*<input type="text" class="form-control" name="name" id="name" placeholder="Your Name">*@
                            @Html.TextBoxFor(e => e.FullName, null, new { @class = "form-control", @placeholder = "Your Name" })
                            @Html.ValidationMessageFor(e => e.FullName, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6">
                            <i class="fal fa-envelope"></i>
                            @*<input type="email" class="form-control" name="email" id="email" placeholder="Your email">*@
                            @Html.TextBoxFor(e => e.EmailID, null, new { @class = "form-control", @placeholder = "Your email", @type = "email" })
                            @Html.ValidationMessageFor(e => e.EmailID, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6">
                            <i class="fa-regular fa-phone"></i>
                            @*<input type="tel" class="form-control" name="number" id="number" placeholder="Phone Number">*@
                            @Html.TextBoxFor(e => e.PhoneNo, null, new { @class = "form-control", @placeholder = "Phone Number", @type = "tel" })
                            @Html.ValidationMessageFor(e => e.PhoneNo, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6">
                            @*<input type="text" class="form-control" name="Subjecr" id="Subject" placeholder="Query Topic">*@
                            @Html.TextBoxFor(e => e.QueryTopic, null, new { @class = "form-control", @placeholder = "Query Topic" })

                        </div>
                        <div class="form-group col-12">
                            <i class="fa-thin fa-pencil"></i>
                            @*<textarea name="message" id="message" cols="30" rows="3" class="form-control style3"
                    placeholder="Your Message"></textarea>*@
                            @Html.TextAreaFor(e => e.Message, new { @class = "form-control style3", @rows = "3", @cols = "30" })

                        </div>
                        <div class="contact-btn col-12 text-center">
                            <button class="as-btn shadow-none" type="submit">Send Message Now</button>
                        </div>
                    </div>

                }



                <p class="form-messages mb-0 mt-3"></p>
            @*</form>*@
        </div>
    </div>
</div>





